pkgname=dex
pkgver=1.g56144ed
pkgrel=1
pkgdesc="A small and flexible text editor."
depends=('glibc')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_github_author=tihirvon
_F_github_devel=yes
Finclude github

build()
{
	Funpack_scm
	Fsed "-O2" "$CFLAGS" Makefile
	Fsed "/usr/local" "/usr" Makefile
	Fbuild
}
