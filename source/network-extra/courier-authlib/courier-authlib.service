[Unit]
Description=courier-authdaemon
After=network.target

[Service]
EnvironmentFile=/etc/courier/authdaemonrc
PIDFile=/var/run/courier/pid
ExecStart=/usr/sbin/courierlogger -pid=/var/run/courier/pid -start /usr/libexec/courier-authlib/authdaemond
ExecStop=/usr/sbin/courierlogger -pid=/var/run/courier/pid -stop /usr/libexec/courier-authlib/authdaemond
Type=forking

[Install]
WantedBy=multi-user.target
