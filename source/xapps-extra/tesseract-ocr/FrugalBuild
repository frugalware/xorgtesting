build() {
  Fcd
  sed -i '1,1i#include <unistd.h>' viewer/svutil.cpp || Fdie
  Fautogen
  Fmake
  Fmakeinstall
  Fmkdir usr/share/tessdata
  cp $Fsrcdir/*.traineddata $Fdestdir/usr/share/tessdata/ || Fdie
  find $Fdestdir/usr/share/tessdata -type f -exec chmod 0644 {} \; || Fdie
}

# optimization OK
